				<TextBlock Text="Credits" Margin="0,10,0,5"/>
				<TextBox Text="{Binding translatedUI.creditsUC}"/>

				<TextBlock Text="Fame" Margin="0,10,0,5"/>
				<TextBox Text="{Binding translatedUI.fameUC}"/>

				<TextBlock Text="Awards" Margin="0,10,0,5"/>
				<TextBox Text="{Binding translatedUI.awardsUC}"/>

				<TextBlock Text="Campaign Setup" Margin="0,10,0,5"/>
